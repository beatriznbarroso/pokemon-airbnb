<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to pokemons_path, class: "navbar-brand" do %>
    <%= image_tag "pokeball.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <% if policy(Pokemon).create? %>
            <%= link_to "Create New Pokemon", new_pokemon_path, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
            <div id="navbarDropdown" class="avatar dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= cl_image_tag(current_user.avatar.key, :transformation=>[ {:aspect_ratio=>"1.0", :width=>50, :crop=>"fill"},{:radius=>"max"}]) %>
            </div>
          <% else %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
         
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, class: "dropdown-item", :method => :delete %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
